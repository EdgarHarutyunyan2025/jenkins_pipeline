properties([disableConcurrentBuilds()])

pipeline {
	agent {
		docker {
			image "python:latest"
			args "--user root"
		}
	}
	stages {
		stage("pylint test") {
			steps{
				sh "ls -la"
				sh "pip install pylint"
				sh "pylint pipe3/app.py  --fail-under=4.0"
			}
		}
		stage("build docker image") {
			steps{
				sh "docker ps"
				sh "docker build -t jenkins-pylint-test:v1 ./pipe3/"
				sh "docker run --name jenkins_test jenkins-pylint-test:v1"
				sh "docker images"
				}
			}
		stage("login Docker Hub") {
			steps {
				echo "========== docker login =========="
				withCredentials([usernamePassword(credentialsId:'loging_docker_hub',usernameVariable: 'USERNAME',passwordVariable: 'PASSWORD')]) {
						sh "docker login -u $USERNAME -p $PASSWORD"
					}
				}
			}
		stage {
			steps("push Docker Hub") {
				echo "========== start pushing image =========="
				sh "docker push edo1997edo/jenkins-pylint-test:v1"
				}
			}
		}
	}
