pipeline {
	agent {
		docker {
			image "python:latest"
			args "--user root"
		}
	}
	stages {
		stage("pylint test") {
			steps{
				sh "ls -la"
				sh "pip install pylint"
				sh "pylint pipe3/app.py  --fail-under=4.0"
			}
		}
		stage("build docker image") {
				sh "docker ps"
				sh "docker build -t jenkins-pylint-test:v1 ./pipe3/"
				sh "docker images"
			}
		}
	}
